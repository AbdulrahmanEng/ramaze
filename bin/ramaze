#!/usr/bin/env ruby
begin
  require "pathname"
  local_ramaze = Pathname.new(__FILE__).expand_path.dirname.join("..", "lib", "ramaze")
  if local_ramaze
    require local_ramaze
  else
    require "ramaze"
  end
  require "ramaze/tool/bin"
rescue LoadError
  require "rubygems"
  require "ramaze/tool/bin"
end
Ramaze::Tool::Bin::Cmd.run(ARGV)
