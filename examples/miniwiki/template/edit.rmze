html do
  head do
    title{ @title }
  end
  body do
    h1(:style => 'text-align:center'){ @title }
    a(:href => "/edit/#@title"){ "Edit #@title" }
    form(:action => '/save', :method => :POST) do
      input(:style => 'width:100%;', :type => :text, :name => :title, :value => @title)
      textarea(:style => 'width:100%;height:30em;', :name => :text){ @text }
      input(:type => :submit)
    end
  end
end
